{
  "key": "consolidatedreceipt",
  "DataConfigs": {
    "serviceName": "rainmaker-common",
    "version": "1.0.0",
    "baseKeyPath": "$.Payments.*",
    "entityIdPath":"$.Payments[0].paymentDetails[0].receiptNumber",
    "isCommonTableBorderRequired": true,
    "mappings": [
      {
        "topic": "common-pdf-generation-3",
        "mappings": [
          {
            "direct": [
              {
                "variable": "payerName", 
                "value": {
                  "path": "$.paymentDetails[0].bill.payerName"
                }
              },
              {
                "variable": "payerContact", 
                "value": {
                  "path": "$.paymentDetails[0].bill.mobileNumber"
                }
              },
              {
                "variable": "receiptNo", 
                "value": {
                  "path": "$.paymentDetails[0].receiptNumber"
                }
              },
              {
                "variable": "serviceType", 
                "value": {
                  "path": "$.paymentDetails[0].businessService"
                }
              },
              {
                "variable": "paidAmount", 
                "value": {
                  "path": "$.paymentDetails[0].totalAmountPaid"
                }
              },
              {
                "variable": "fromPeriod", 
                "value": {
                  "path": "$.paymentDetails[0].billDetails[0].fromPeriod"
                }
              },
              {
                "variable": "toPeriod", 
                "value": {
                  "path": "$.paymentDetails[0].billDetails[0].toPeriod"
                }
              },
              {
                "variable": "paymentMode", 
                "value": {
                  "path": "$.paymentMode"
                }
              },
              {
                "variable": "G8ReceiptNo",
                "value": {
                  "path": "$.paymentDetails[0].billDetails[0].manualReceiptNumber"
                }
              },
              {
                "variable": "G8ReceiptDate",
                "value": {
                  "path": "$.paymentDetails[0].billDetails[0].manualReceiptDate"
                }
              },
              {
                "variable": "paymentDate", 
                "value": {
                  "path": "$.transactionDate"
                }
              },
              {
                "variable": "consumerID", 
                "value": {
                  "path": "$.paymentDetails[0].bill.consumerCode"
                }
              },
              {
                "variable": "transactionID", 
                "value": {
                  "path": "$.transactionNumber"
                }
              },
              {
                "variable": "totalAmount", 
                "value": {
                  "path": "$.paymentDetails[0].totalAmount"
                }
              },
	      {
                "variable": "logoImage",                        
                "url":"https://raw.githubusercontent.com/egovernments/egov-web-app/master/web/rainmaker/dev-packages/egov-ui-kit-dev/src/assets/images/pblogo.png",
                "type":"image"      
              }
            ]
          },
          {
            "derived": [
              {
                "variable": "pendingAmount", 
                "formula": "{{totalAmount}}-{{paidAmount}}"
              },
              {
                "variable": "billingPeriod", 
                "formula": "{{fromPeriod}}-{{toPeriod}}"
              }
            ]
          }
        ]
      }
    ]
  }
}
